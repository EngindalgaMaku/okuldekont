# Database
DATABASE_URL="mysql://username:password@localhost:3306/okul_dekont"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-here"

# OCR ve AI Analiz Sistemi - Tamamen Ücretsiz!
# Bu sistem kural tabanlı AI kullanır, dış API gerektirmez

# Encryption (Finansal veriler için)
ENCRYPTION_KEY="32-character-encryption-key-here"

# Security Configuration
# Rate limiting ayarları (saat başına)
ANALYSIS_RATE_LIMIT_PER_HOUR=50
BATCH_ANALYSIS_RATE_LIMIT_PER_HOUR=10
FAILED_ATTEMPTS_RATE_LIMIT_PER_HOUR=20
LOGIN_RATE_LIMIT_PER_HOUR=10

# Dosya güvenlik ayarları
MAX_FILE_SIZE_MB=10
MAX_BATCH_SIZE=20
ALLOWED_FILE_EXTENSIONS="pdf,jpg,jpeg,png,webp"

# OCR güvenlik ayarları
OCR_MIN_CONFIDENCE=60
OCR_MAX_TEXT_LENGTH=50000
OCR_SUSPICIOUS_THRESHOLD=0.8

# AI analiz güvenlik ayarları
AI_MIN_RELIABILITY=0.3
AI_MAX_FORGERY_RISK=0.7
AI_SECURITY_FLAG_THRESHOLD=0.5

# Audit log ayarları
SECURITY_AUDIT_ENABLED=true
SECURITY_LOG_LEVEL=INFO
AUDIT_RETENTION_DAYS=90
AUDIT_LOG_TO_FILE=false
AUDIT_LOG_FILE_PATH="./logs/security-audit.log"

# IP güvenlik ayarları
BLOCK_LOCALHOST_IN_PRODUCTION=true
IP_WHITELIST=""
IP_BLACKLIST=""
ENABLE_GEO_BLOCKING=false

# CORS ayarları
CORS_ORIGIN="*"
CORS_CREDENTIALS=false
CORS_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CORS_HEADERS="Content-Type,Authorization,X-Requested-With"

# Encryption ayarları
ENCRYPTION_ALGORITHM="aes-256-gcm"
ENCRYPTION_KEY_LENGTH=32
ENCRYPTION_IV_LENGTH=16

# Session güvenlik ayarları
SESSION_MAX_AGE_HOURS=24
COOKIE_SAME_SITE="strict"

# Development ayarları
NODE_ENV=development